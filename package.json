{
	"name": "7pret",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "concurrently \"bun run dev:client\" \"bun run dev:server\"",
		"dev:client": "vite",
		"dev:server": "bun run server/index.ts",
		"build": "bunx prisma generate && tsc -b && vite build",
		"start": "bun run server/index.ts",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"lint": "biome lint .",
		"typecheck": "tsc --noEmit",
		"prepare": "node -e \"if (process.env.NODE_ENV !== 'production') require('child_process').execSync('lefthook install', {stdio: 'inherit'})\""
	},
	"dependencies": {
		"@hono/node-server": "^1.19.9",
		"@hono/swagger-ui": "^0.5.3",
		"@hono/zod-openapi": "^1.2.1",
		"@prisma/adapter-pg": "^7.3.0",
		"@prisma/client": "^7.3.0",
		"better-auth": "^1.4.18",
		"hono": "^4.11.7",
		"pg": "^8.18.0",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"react-router-dom": "^7.13.0",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"@types/node": "^24.10.1",
		"@types/pg": "^8.16.0",
		"@types/react": "^19.2.5",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.1",
		"concurrently": "^9.2.1",
		"dotenv": "^17.2.3",
		"lefthook": "^2.0.16",
		"prisma": "^7.3.0",
		"typescript": "~5.9.3",
		"vite": "^7.2.4"
	}
}
